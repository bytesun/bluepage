<%- include header %>
	<!-- case list table -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1><%=ocase.subject%></h1>
				<%=ocase.startdate%>
				<p><%-ocase.description%></p>	
				<hr>
				
			</div>
		</div> 
		
		
		<div class="row">
			<div class="col-md-8">
				<% if(uid+'' == ocase.uid+''){%>
	             <div class="panel panel-default">
  					<div class="panel-body">
					<form method="post" action="/steps/new">
				   <div class="form-group">
				   		<input type="hidden" name="isprivate" value="<%=ocase.isprivate%>">
						<input type="hidden" name="caseid" value="<%=ocase._id%>">
					  	<input class="form-control"  name="step" placeholder="new step" required autofocus/>
					</div>  	
					<div class="form-group">  	
			            <label>Note:</label> 
			            <textarea class="form-control" name="note" required> </textarea>
			         </div>
			         <div class="form-group">  
	     					<input type="checkbox" name="isSubCase">Create sub-case? 
	     					<input type="submit" value="Save" />
						    
						</div> 
					   </div> <!--end of panel-body-->
					</div>   
					</form>
			<%}%>	<!--end if -->
				
			<!-- phases -->	
			<div>			
				<% if(steps != null){%>
				<ul class="list-group"> 
				<% steps.forEach(function(s){%>
					<li class="list-group-item">
					<% if (s.subcase == undefined){%>
					<h3 class="glyphicon glyphicon-check"><%=s.step%></h3>
					<%}else{%>  
					<a href="/cases/<%=s.subcase%>"+><h3 class="glyphicon glyphicon-check"><%=s.step%></h3></a>
					<%}%>
					<p><%=s.createdate%></p>
					<p><%=s.note%></p>
					</li>
				<% })%>
				</ul>
				<%} %>
            </div>
		
    	  </div>

			
			<!-- comments list -->
			
		<div class="col-md-4">
			<div class="row">
		
		<% if(uid+'' != '0' && uid+'' != ocase.uid+''){%>
		
			<form method="post" action="/comments/new">
				<div class="form-group">  	
						<label>Comment:</lable>
						<input type="hidden" name="caseid" value="<%=ocase._id%>">
						
			            <textarea  class="form-control" name="comment"> </textarea>
			    </div>
			             
					  <input type="submit" value="Save" />
			</form>

		<%}%>	
					
				<% if(comments != null && comments!=''){%>
				<table class="table"> 
				<% comments.forEach(function(c){%>
					<tr><td><%=c.comment%></td></tr>
				<% })%>
				</table>
				<%}else{%>
					There is no comments!  
				<%}%>
			
			</div>	<!-- end of row -->
		</div> <!-- end of col-->
		
	</div><!-- end of row -->
</div>	
	
	
<%- include footer %>